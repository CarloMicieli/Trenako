{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CatalogItem",
  "type": "object",
  "required": [
    "brand",
    "itemNumber",
    "scale",
    "category",
    "description",
    "count",
    "version"
  ],
  "properties": {
    "brand": {
      "type": "string"
    },
    "itemNumber": {
      "type": "string"
    },
    "scale": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "ELECTRIC_MULTIPLE_UNITS",
        "FREIGHT_CARS",
        "LOCOMOTIVES",
        "PASSENGER_CARS",
        "RAILCARS",
        "STARTER_SETS",
        "TRAIN_SETS"
      ]
    },
    "description": {
      "type": "string"
    },
    "details": {
      "type": [
        "string",
        "null"
      ]
    },
    "powerMethod": {
      "type": "string",
      "enum": [
        "AC",
        "DC",
        "TRIX_EXPRESS"
      ]
    },
    "deliveryDate": {
      "type": [
        "string",
        "null"
      ]
    },
    "availabilityStatus": {
      "type": "string",
      "enum": [
        "ANNOUNCED",
        "AVAILABLE",
        "DISCONTINUED"
      ]
    },
    "rollingStocks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RollingStock"
      }
    },
    "count": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "version": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    }
  },
  "definitions": {
    "RollingStock": {
      "type": "object",
      "required": [
        "epoch",
        "railway",
        "techSpecs",
        "typeName"
      ],
      "properties": {
        "category": {
          "default": "",
          "type": "string"
        },
        "control": {
          "type": [
            "string",
            "null"
          ]
        },
        "dccInterface": {
          "type": [
            "string",
            "null"
          ]
        },
        "depot": {
          "type": [
            "string",
            "null"
          ]
        },
        "dummy": {
          "type": [
            "string",
            "null"
          ]
        },
        "epoch": {
          "type": "string"
        },
        "length": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        },
        "livery": {
          "type": [
            "string",
            "null"
          ]
        },
        "railway": {
          "type": "string"
        },
        "roadNumber": {
          "type": [
            "string",
            "null"
          ]
        },
        "series": {
          "type": [
            "string",
            "null"
          ]
        },
        "serviceLevel": {
          "type": [
            "string",
            "null"
          ]
        },
        "subCategory": {
          "type": [
            "string",
            "null"
          ]
        },
        "techSpecs": {
          "$ref": "#/definitions/TechSpecs"
        },
        "typeName": {
          "type": "string"
        }
      }
    },
    "TechSpecs": {
      "type": "object",
      "required": [
        "closeCouplers",
        "flywheelFitted",
        "interiorLights",
        "lights",
        "metalBody",
        "minimumRadius",
        "springBuffers"
      ],
      "properties": {
        "closeCouplers": {
          "type": "string"
        },
        "flywheelFitted": {
          "type": "string"
        },
        "interiorLights": {
          "type": "string"
        },
        "lights": {
          "type": "string"
        },
        "metalBody": {
          "type": "string"
        },
        "minimumRadius": {
          "type": "number"
        },
        "springBuffers": {
          "type": "string"
        }
      }
    }
  }
}