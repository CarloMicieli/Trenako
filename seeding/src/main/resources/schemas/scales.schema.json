{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scale",
  "type": "object",
  "required": [
    "name",
    "gauge",
    "ratio",
    "version"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "ratio": {
      "type": "number"
    },
    "gauge": {
      "$ref": "#/definitions/Gauge"
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "standards": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Standard"
      },
      "uniqueItems": true
    },
    "version": {
      "type": "string"
    }
  },
  "definitions": {
    "Gauge": {
      "type": "object",
      "required": [
        "inches",
        "millimeters",
        "trackGauge"
      ],
      "properties": {
        "inches": {
          "type": "number"
        },
        "millimeters": {
          "type": "number"
        },
        "trackGauge": {
          "type": "string",
          "enum": [
            "BROAD",
            "MEDIUM",
            "MINIMUM",
            "NARROW",
            "STANDARD"
          ]
        }
      }
    },
    "Standard": {
      "type": "string",
      "enum": [
        "BRITISH",
        "JAPANESE",
        "NEM",
        "NMRA"
      ]
    }
  }
}
