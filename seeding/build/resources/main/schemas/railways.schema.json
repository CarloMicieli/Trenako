{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Railway",
  "type": "object",
  "required": [
    "name",
    "country",
    "version"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "abbreviation": {
      "type": [
        "string",
        "null"
      ]
    },
    "registeredCompanyName": {
      "type": "string"
    },
    "organizationEntityType": {
      "anyOf": [
        {
          "$ref": "#/definitions/OrganizationEntityType"
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "country": {
      "type": "string"
    },
    "periodOfActivity": {
      "$ref": "#/definitions/PeriodOfActivity"
    },
    "gauge": {
      "$ref": "#/definitions/Gauge"
    },
    "headquarters": {
      "type": [
        "string",
        "null"
      ]
    },
    "totalLength": {
      "$ref": "#/definitions/Length"
    },
    "contactInfo": {
      "$ref": "#/definitions/Contacts"
    },
    "socials": {
      "$ref": "#/definitions/Socials"
    },
    "version": {
      "type": "integer",
      "format": "uint8",
      "minimum": 1
    }
  },
  "definitions": {
    "Contacts": {
      "type": "object",
      "properties": {
        "email": {
          "type": [
            "string",
            "null"
          ]
        },
        "phone": {
          "type": [
            "string",
            "null"
          ]
        },
        "websiteUrl": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Gauge": {
      "type": "object",
      "required": [
        "meters",
        "trackGauge"
      ],
      "properties": {
        "meters": {
          "type": "number"
        },
        "trackGauge": {
          "type": "string",
          "enum": [
            "BROAD",
            "MEDIUM",
            "MINIMUM",
            "NARROW",
            "STANDARD"
          ]
        }
      }
    },
    "Length": {
      "type": "object",
      "properties": {
        "kilometers": {
          "type": [
            "number",
            "null"
          ]
        },
        "miles": {
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "OrganizationEntityType": {
      "type": "string",
      "enum": [
        "CIVIL_LAW_PARTNERSHIP",
        "ENTREPRENEURIAL_COMPANY",
        "GLOBAL_PARTNERSHIP",
        "LIMITED_COMPANY",
        "LIMITED_PARTNERSHIP",
        "LIMITED_PARTNERSHIP_LIMITED_COMPANY",
        "OTHER",
        "PUBLIC_INSTITUTION",
        "PUBLIC_LIMITED_COMPANY",
        "REGISTERED_SOLE_TRADER",
        "SOLE_TRADER",
        "STATE_OWNED_ENTERPRISE"
      ]
    },
    "PeriodOfActivity": {
      "type": "object",
      "required": [
        "operatingSince",
        "status"
      ],
      "properties": {
        "operatingSince": {
          "type": "string"
        },
        "operatingUntil": {
          "type": [
            "string",
            "null"
          ]
        },
        "status": {
          "$ref": "#/definitions/Status"
        }
      }
    },
    "Socials": {
      "type": "object",
      "properties": {
        "facebook": {
          "type": [
            "string",
            "null"
          ]
        },
        "instragram": {
          "type": [
            "string",
            "null"
          ]
        },
        "linkedin": {
          "type": [
            "string",
            "null"
          ]
        },
        "twitter": {
          "type": [
            "string",
            "null"
          ]
        },
        "youtube": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Status": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "INACTIVE"
      ]
    }
  }
}